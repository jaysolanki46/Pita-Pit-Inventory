<!DOCTYPE html>
<html lang="en">

<head>
    <title>Pita Pit - Recipe</title>
    @Html.Partial("~/Views/Shared/Header.html")
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        @Html.Partial("~/Views/Shared/Nav.html")

        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                @Html.Partial("~/Views/Shared/StatusBar.html")
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <h1 class="h3 mb-2 text-gray-800">Recipe</h1>
                    <div class="mb-4">
                        <div class="row">
                            <div class="col-lg-9">
                                <div class="card o-hidden border-0 shadow-lg my-0">
                                    <div class="card-body p-0">
                                        <!-- Nested Row within Card Body -->
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="p-lg-5">
                                                    <form>
                                                        <div class="form-row">
                                                            <div class="form-group col-md-12">
                                                                <label for="recipeName">Name</label>
                                                                <input type="text" class="form-control" id="recipeName" placeholder="Ex. Chicken bacon crunch">
                                                            </div>
                                                        </div>
                                                        <div class="form-row">
                                                            <div class="form-group col-md-12">
                                                                <label for="recipePackaging">Packaging</label>
                                                                <select class="form-control recipePackagingSelectPicker">
                                                                    <option>SM Wrap</option>
                                                                    <option>LG Wrap</option>
                                                                    <option>SM Bowl</option>
                                                                    <option>LG Bowl</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary">ADD</button>
                                                        <button type="button" class="btn btn-danger">CANCEL</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="card h-100 o-hidden mb-2 border-0 shadow-lg my-0">
                                    <div class="card-body p-0">
                                        <!-- Nested Row within Card Body -->
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="p-lg-5">
                                                    <form>
                                                        <div class="form-row">
                                                            <div class="form-group col-md-12">
                                                                <label for="igredientList">Ingredient List</label>
                                                                <select class="selectpicker" multiple>
                                                                    <option>Avocado</option>
                                                                    <option>Latus</option>
                                                                    <option>Onions</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Recipe List</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Packaging</th>
                                            <th>Ingredient List</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Packaging</th>
                                            <th>Ingredient List</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <tr>
                                            <td>Chiken bacon crunch</td>
                                            <td>SM Bowl</td>
                                            <td>Latus, Tomatoes, Onion, Pamasan cheese, ceaser, ...</td>
                                            <td>
                                                <a href="#" class="btn btn-info float-sm-left btn-circle btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger float-sm-right btn-circle btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Maxicano</td>
                                            <td>LG Wrap</td>
                                            <td>Latus, Jelapeono, Sour Cream, Hot Chilli, ...</td>
                                            <td>
                                                <a href="#" class="btn btn-info float-sm-left btn-circle btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger float-sm-right btn-circle btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->
                <!-- Footer -->
                @Html.Partial("~/Views/Shared/footer.html")
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>


        @Html.Partial("~/Views/Shared/FooterJS.html")



</body>

</html>
<script type="text/javascript">
      $('select').selectpicker();
</script>
